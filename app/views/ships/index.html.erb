<h1 class="heading">Choose a ship for your next adventure!</h1>

<div class="container">
  <div class="row">
    <% @ships.each do |ship| %>
      <div class="col-md-4">
        <%= link_to ship_path(ship), class: "card-trip-link" do %>
          <div class="card-trip">
           <% if ship.photo.attached? %>
            <%= image_tag(url_for(ship.photo), class: "card-trip-img", alt: ship.name) %>
           <% else %>
           <%= image_tag("shipdefault.jpg", class: "card-trip-img", alt: "Default Image") %>
            <% end %>
            <div class="card-trip-infos">
             <div>
              <h2><%= ship.name %></h2>
              <p><%= ship.description %></p>
             </div>
              <h2 class="card-trip-pricing">â‚¬<%= ship.price %></h2>
              <img src="http://t0.gstatic.com/licensed-image?q=tbn:ANd9GcQJkQrg9F6JgVV2kJkGIlg0KVK713-LpWiBHtzejjS2dojGQLtB9tkdtfByVnQAs5CCWavRJnHuyXtBj8clf5M" class="card-trip-user avatar-bordered" />
  </div>
</div>

        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div style="width: 80%; margin: 0 auto; border: 2px solid white; padding: 10px;">
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
