<%= simple_form_for(ship) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :category, collection: ['Pirate','Passenger','Cruise','Yacht'] %>
  <%=f.input :photo, as: :file %>
  <%= f.submit "Create Ship", class: "btn btn-flat" %>
<% end %>
