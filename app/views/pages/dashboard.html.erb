<h1>List</h1>

<% if @ships_bookings.any? %>
  <h2>Pending list</h2>

    <% @ships_bookings.each do |booking| %>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= booking.ship.name %></h2>
      <p class="card-text"><strong>Description:</strong> <%= booking.ship.description %></p>
      <p class="card-text"><strong>Price:</strong> <%= booking.ship.price %></p>
      <p class="card-text"><strong>Address:</strong> <%= booking.ship.address %></p>
      <p class="card-text card-category"><strong>Category:</strong> <%= booking.ship.category %></p>
      <button class="btn btn-primary">Accept</button>
      <button class="btn btn-primary">Reject</button>
      </div>
    </div>
  <% end %>

<% else %>
  <p>No one booked your ships :( </p>
<% end %>
<h2>My Bookings</h2>
<% @bookings.each do |booking| %>
<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= booking.ship.name %></h2>
    <p class="card-text"><strong>Description:</strong> <%= booking.ship.description %></p>
    <p class="card-text"><strong>Price:</strong> <%= booking.ship.price %></p>
    <p class="card-text"><strong>Address:</strong> <%= booking.ship.address %></p>
    <p class="card-text card-category"><strong>Category:</strong> <%= booking.ship.category %></p>
    </div>
  </div>
<% end %>
